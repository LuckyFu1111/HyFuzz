# ==============================================================================
# HyFuzz MCP Server - Environment Configuration Template
# ==============================================================================
#
# IMPORTANT:
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in all required values (marked as REQUIRED)
# 3. NEVER commit .env files to version control!
# 4. Ensure .env is in .gitignore
#
# Security Notes:
# - Keep secret keys secure and never share them
# - Use different keys for dev/staging/production
# - Rotate keys periodically (recommended: every 90 days)
# - Use strong, randomly generated keys (min 32 bytes)
#
# ==============================================================================

# ==============================================================================
# AUTHENTICATION & SECURITY (REQUIRED)
# ==============================================================================

# JWT Secret Key for token signing (REQUIRED)
# Generate with: python -c 'from src.utils.secure_auth import generate_secret_key; print(generate_secret_key())'
# Minimum length: 43 characters (32 bytes base64-encoded)
JWT_SECRET_KEY=your-secret-key-here-replace-me-with-generated-key

# Authentication Settings
AUTH_ENABLED=true
TOKEN_EXPIRY=3600  # Token expiration in seconds (1 hour)

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================

# Server Host and Port
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Server Mode (development, staging, production)
SERVER_MODE=development

# Enable debug mode (NEVER use in production!)
DEBUG=false

# ==============================================================================
# LLM CONFIGURATION (Ollama)
# ==============================================================================

# Ollama API Base URL
OLLAMA_BASE_URL=http://localhost:11434

# Default LLM Model
LLM_MODEL=llama2

# LLM Embedding Model
LLM_EMBEDDING_MODEL=all-minilm

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=./logs/hyfuzz.log

# ==============================================================================
# CACHE CONFIGURATION
# ==============================================================================

# Cache Strategy (in_memory, disk, hybrid)
CACHE_STRATEGY=hybrid

# Cache Directory
CACHE_DIR=./cache

# Cache TTL (Time-To-Live) in seconds
CACHE_TTL=3600

# ==============================================================================
# END OF CONFIGURATION
# ==============================================================================
